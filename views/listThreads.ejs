                        <h5>
                                <%= entry.title%>
                        </h5>                                

                        <div class="form-group">
                            <%= entry.body%>
                        </div>

                        <div class="input-group-text col-sm-2">
                            Author: <%= entry.author.username %>
                        </div>
                    </a>                        

