<% include header %>

<h2>Thread List</h2>

<div class="container-fluid"> 

    <div class="list-group">
        <% if (threads.length) { %>
            <% threads.forEach(function(entry) { %>
                <div class="text-muted float-right">

                    <button type="button" class="list-group-item list-group-item-action" name="selectedStudent" id="selectedStudent">
                        <div>
                            Author: <%= entry.author.username %>
                        </div>

                        <div>
                            <%= entry.title%>
                        </div>

                        <div class="form-group">
                            <%= entry.body%>
                        </div>
                    </button>

                    <div class="form-group float-right">
                        <a href="/threads/viewThread/<%= entry.title %>" class="btn btn-info float-right">
                            View
                        </a>
                    </div>
                        
                    <div class="form-group float-right">
                        <a href="/threads/editThread/<%= entry.title %>" class="btn btn-warning float-right">
                            Edit
                        </a>
                    </div>
                        
                    <div class="form-group float-right">
                        <a href="/threads/deleteThread/<%= entry.title %>" class="btn btn-danger float-right">
                            Delete
                        </a>
                    </div>

                    
                </div>
            <% }) %>
        <% } else { %>   
            No Threads found! <a href="/threads/createThread">Create one!</a>
        <% } %>
    </div>
</div>

<% include footer %>